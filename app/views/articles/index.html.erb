<p style="color: green"><%= notice %></p>
List of Articles
<div id="articles">
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th colspan="3">Description</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td colspan="3"><%= article.description %></td>
          <td>
            <%= link_to "View", article_path(article) %>
            <%= link_to "Edit", edit_article_path(article) %>
            <%= link_to "Delete", article_path(article), data: { "turbo-method": :delete }, :onclick=>"return confirm('Are you sure you want to delete this ')" %>
          </td>
        </tr>
        <br>
      <% end %>
    </body>
  </table>
</div>

<br>
<button>
  <%= link_to "New article", new_article_path %>
</button>
