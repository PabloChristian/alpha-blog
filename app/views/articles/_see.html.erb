<h2 align="center">Title: <%= obj.title %></h2>

<div class="well col-xs-8 col-xs-offset-2">

<h4 class="center description"><strong>Description</strong></h4>

<hr>

<%= simple_format(obj.description) %>
<div  style="width:150px; height:150px">

</div>
<div class="article-actions">
<% if logged_in? && (current_user == @article.user ) %>
<%= link_to "Edit", edit_user_article_path(current_user,@article), class: "btn btn-xs btn-primary" %>
 <%= link_to "Delete", user_article_path(current_user,@article), method: :delete,
              data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }  ,class: "btn btn-xs btn-danger"  %>
<% end %>
<%= link_to "Back to articles", user_articles_path(current_user), class: "btn btn-xs btn-success" %>

</div>

</div>
